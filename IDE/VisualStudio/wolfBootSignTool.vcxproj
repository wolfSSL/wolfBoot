      SourceFiles="$(UnitTestsTargetHeader)"
      DestinationFiles="$(TargetHeaderDest)"
      SkipUnchangedFiles="true"
      Condition="!Exists('$(TargetHeaderDest)') AND Exists('$(UnitTestsTargetHeader)')" />

