  <Target Name="SaveAndShowPreprocessorDefinitions" BeforeTargets="ClCompile">
    <!-- Collect all PreprocessorDefinitions visible to ClCompile -->
    <ItemGroup>
      <_AllDefs Include="%(ClCompile.PreprocessorDefinitions)" />
      <!-- Split semicolon list into individual items -->
      <_DefRaw Include="$([System.String]::Copy('%(_AllDefs.Identity)').Split(';'))" />
    </ItemGroup>

    <!-- Clean up empties and dedupe -->
    <ItemGroup>
      <_Def Include="@(_DefRaw)" Condition="'%(_DefRaw.Identity)' != ''" />
    </ItemGroup>
    <RemoveDuplicates Inputs="@(_Def)">
      <Output TaskParameter="Filtered" ItemName="_DefDistinct" />
    </RemoveDuplicates>

    <!-- Ensure output directory exists -->
    <MakeDir Directories="$([System.IO.Path]::GetDirectoryName('$(PreprocDefsFile)'))" />

    <!-- Write one per line, overwrite each build -->
    <WriteLinesToFile
        File="$(PreprocDefsFile)"
        Lines="@(_DefDistinct)"
        Overwrite="true"
        Encoding="UTF-8" />

    <!-- Also echo to build log -->
    <Message Importance="High" Text="PreprocessorDefinitions written to: $(PreprocDefsFile)" />
    <Message Importance="High" Text="  %(_DefDistinct.Identity)" />
  </Target>

