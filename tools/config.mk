  KINETIS_CMSIS?=$(KINETIS)/CMSIS
  FREEDOM_E_SDK?=$(HOME)/src/freedom-e-sdk
  STM32CUBE?=$(HOME)/src/STM32CubeWB/STM32Cube_FW_WB_V1.2.0
  DEBUG?=0
  VTOR?=1
  CORTEX_M0?=0
  NO_ASM?=0
  EXT_FLASH?=0
  SPI_FLASH?=0
  ALLOW_DOWNGRADE?=0
